{
  "name": "Mpurse",
  "manifest_version": 2,
  "description": "Extension for Monaparty",
  "version": "0.1.0",
  "icons": {
    "16": "assets/mpchain16.png",
    "48": "assets/mpchain48.png",
    "128": "assets/mpchain128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "extension_scripts/contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["extension_scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Mpurse",
    "default_icon": {
      "19": "assets/mpchain19.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}